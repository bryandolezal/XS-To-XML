        "type": "shell",
        "command": "python",
        "args": [
          "${workspaceFolder}/scripts/xs_to_xml_dir.py",
          "${fileDirname}"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        },
        "problemMatcher": []
      }
    ]
